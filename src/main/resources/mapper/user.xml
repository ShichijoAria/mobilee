<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.xhu.mobilee.dao.UserDao">

    <resultMap type="UserEntity" id="user">
        <id property="id" column="t_id" />
        <result property="name" column="t_name" />
        <result property="password" column="t_password" />
        <result property="gender" column="t_gender" />
        <result property="created" column="t_created"/>
        <result property="birthday" column="t_birthday"/>
        <result property="phone" column="t_phone"/>
        <result property="email" column="t_email"/>
        <result property="edition" column="t_edition"/>
    </resultMap>

    <insert id="insertUser" parameterType="UserEntity" keyProperty="id">
        INSERT INTO t_user (name,password) VALUES (#{name},#{password})
    </insert>

    <select id="userLogin" resultMap="user">
     <![CDATA[
        {
              CALL p_user_login(#{param1},#{param2},#{param3})
        }
        ]]>
    </select>

    <select id="findUserById" parameterType="long" resultMap="user">
        SELECT
            id,
            name,
            password,
            gender,
            created,
            birthday,
            phone,
            email,
            edition
        FROM t_user
        WHERE id = #{id}
    </select>

    <update id="updateUserById" parameterType="UserEntity">
        UPDATE t_user
        <set>
            <if test="name != null">name=#{name},</if>
            <if test="password != null">password=#{password},</if>
            <if test="gender != null">gender=#{gender},</if>
            <if test="created != null">created=#{created},</if>
            <if test="birthday != null">birthday=#{birthday},</if>
            <if test="phone != null">phone=#{phone},</if>
            <if test="email != null">email=#{email},</if>
            <if test="edition != null">edition=edition+1</if>
        </set>
        WHERE id = #{id} AND edition=#{edition}
    </update>

    <delete id="deleteUser" parameterType="list">
            DELETE FROM t_user WHERE id IN
        <foreach collection="list" item="ids"  open="(" separator="," close=")">
            #{ids}
        </foreach>
    </delete>

</mapper>