<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="edu.xhu.mobilee.dao.ManufacturerDao">

    <select id="findManufacturerById" resultMap="manufacturerResult">
        SELECT
          m.id  AS m_id,
          m.name  AS  m_name,
          m.address AS m_address,
          a.id AS a_id,
          a.name AS a_name
        from t_manufacturer m join t_admin a on m.author = a.id
        where m.id = #{id}
    </select>

    <resultMap type="ManufacturerEntity" id="manufacturerResult">
        <id property="id" column="m_id" />
        <result property="name" column="m_name" />
        <result property="address" column="m_address" />
        <association property="author" resultMap="authorResult"/>
    </resultMap>
    
    <resultMap id="authorResult" type="AdminEntity">
        <id property="id" column="a_id" />
        <result property="name" column="a_name" />
        <result property="password" column="a_password" />
    </resultMap>
    
</mapper>